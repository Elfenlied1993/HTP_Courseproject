@model Course.ITnews.Domain.Contracts.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
<script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
<h1>Edit</h1>

<h4>News</h4>
<hr />

<div class="col-md-12">
    <form asp-action="Edit">
        <input asp-for="Id" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label">Category:</label>
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control">
                <option>Choose from existing one</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <label asp-for="FullDescription" class="control-label">Enter your full description:</label>
        <textarea id="full-description" style="display: none" asp-for="FullDescription"></textarea>
        <script>
            var easyMDE = new EasyMDE({
                autoDownloadFontAwesome: true,
                element: document.getElementById('full-description'),
                initialValue: '@ViewData.Model.FullDescription',
            });
        </script>
        <div class="form-group">
            <label asp-for="ShortDescription" class="control-label">Enter your short description here:</label>
            <textarea asp-for="ShortDescription" class="form-control"></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

